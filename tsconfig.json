{
    "compilerOptions": {
      "declaration": true,
      "declarationDir": "./dist/types",
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "module": "esnext",
      "target": "es5",
      "strict": true,
      "jsx": "react",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["stories/**/*"],
    "exclude": ["node_module"]
}