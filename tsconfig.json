    "compilerOptions": {
        "target": "es5",
        "module": "NodeNext",
        "strict": true,
        "jsx": "react",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "sourceMap": true,
        "moduleResolution": "NodeNext"
